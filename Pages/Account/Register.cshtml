@page
@model Shop.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Регистрация</h2>
                </div>
                <div class="card-body">
                    <form id="registerForm" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Password" class="form-label">Пароль</label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label">Подтвердите пароль</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.FirstName" class="form-label">Имя</label>
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.LastName" class="form-label">Фамилия</label>
                                <input asp-for="Input.LastName" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Gender" class="form-label">Пол</label>
                            <select asp-for="Input.Gender" class="form-select">
                                <option value="">-- Выберите пол --</option>
                                <option value="Мужской">Мужской</option>
                                <option value="Женский">Женский</option>
                                <option value="Не указывать">Не указывать</option>
                            </select>
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.BirthDate" class="form-label">Дата рождения</label>
                            <input asp-for="Input.BirthDate" type="date" class="form-control" />
                            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PreferredSize" class="form-label">Предпочитаемый размер</label>
                            <select asp-for="Input.PreferredSize" class="form-select">
                                <option value="">-- Выберите размер --</option>
                                <option value="XS">XS</option>
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                                <option value="XXL">XXL</option>
                            </select>
                            <span asp-validation-for="Input.PreferredSize" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.City" class="form-label">Город</label>
                            <input asp-for="Input.City" class="form-control" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">Телефон</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Зарегистрироваться</button>
                    </form>

                    <div class="mt-3 text-center">
                        <p>Уже есть аккаунт? <a href="/Account/Login">Войти</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

