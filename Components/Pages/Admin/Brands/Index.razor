@page "/Admin/Brands"
@attribute [Authorize(Roles = "Admin")]
@inject BrandService BrandService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Управление брендами</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Управление брендами</h2>
        <a href="/Admin/Brands/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить бренд
        </a>
    </div>

    @if (brands != null && brands.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Название</th>
                        <th>Описание</th>
                        <th>Страна</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in brands)
                    {
                        <tr>
                            <td>@brand.Id</td>
                            <td>@brand.Name</td>
                            <td>@(brand.Description ?? "-")</td>
                            <td>@(brand.Country ?? "-")</td>
                            <td>
                                <a href="/Admin/Brands/Edit/@brand.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteBrand(brand.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">Бренды не найдены</p>
    }
</div>

@code {
    private List<Brand>? brands;

    protected override async Task OnInitializedAsync()
    {
        brands = await BrandService.GetAllBrandsAsync();
    }

    private async Task DeleteBrand(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Вы уверены, что хотите удалить этот бренд?"))
        {
            if (await BrandService.DeleteBrandAsync(id))
            {
                brands = await BrandService.GetAllBrandsAsync();
                StateHasChanged();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Не удалось удалить бренд. Возможно, он используется в товарах.");
            }
        }
    }
}

